<li class={{this.styleNamespace}}>
  <div class='details'>
    <h2 class="title">
      {{this.movie.title}}
      <button class="edit" type='button' id='title' {{on 'click' this.edit}}>
        Edit Title
      </button>
    </h2>
    <h3 class="rating">
       {{#if this.movie.rating}}
        Movie Rating - (
        {{this.movie.rating}} / 5 )
        {{else}}
        No Rating
       {{/if}}
       <button class="edit" type='button' id='rating' {{on 'click' this.edit}}>
        Edit Rating
      </button>
    </h3>

    <h3 class="desc">
      {{this.movie.description}}
      <button class="edit" type='button' id='desc' {{on 'click' this.edit}}>
        Edit Description
      </button>
    </h3>
    
<button class="delete" type="button"{{on 'click' this.delete}}> Delete Movie</button>

  </div>
</li>